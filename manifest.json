{
				"manifest_version": 3,
				"name": "LLM Copy Block",
				"version": "0.1",
				"description": "Prevents copying from LLM websites with a temporary pause feature.",
				"permissions": [
								"storage"
				],
				"icons": {

								"16": "logo.png",
								"32": "logo.png",
								"48": "logo.png",
								"128": "logo.png"
				},
				"action": {
								"default_popup": "popup.html",
								"default_icon": {
												"16": "logo.png",
												"32": "logo.png",
												"48": "logo.png",
												"128": "logo.png"
								}
				},
				"content_scripts": [
								{
												"matches": [
																"*://chatgpt.com/*",
																"*://*.chatgpt.com/*",
																"*://gemini.google.com/*",
																"*://claude.ai/*",
																"*://*.claude.ai/*"
												],
												"js": ["content.js"],
												"run_at": "document_end"
								}
				]
}
